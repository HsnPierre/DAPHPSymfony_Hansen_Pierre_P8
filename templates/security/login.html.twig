{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form_start(loginform, {'action' : path('security_login'), 'method': 'post', 'attr': {'novalidate': 'novalidate'}}) }}

        {{form_row(loginform.username, {'value': last_username })}}
        {{form_row(loginform.password)}}
        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <button type="submit" class="btn btn-primary" value="Se connecter">Se connecter</button>

    {{ form_end(loginform) }}

{% endblock %}
